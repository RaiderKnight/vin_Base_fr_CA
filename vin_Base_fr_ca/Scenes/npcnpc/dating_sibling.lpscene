WHAT: all
WHERE: all, -work
WHEN: 8 - 20
WHO: Actor = getCompanion(); If Actor.isDating() && !Actor.isExRelative() && !Actor.hasRelationship(Siblings) && Random(20, 100) < Actor:attractiontoplayer
OTHER: !isPlayerMarried()

    SceneStart()
    
    dice = Random(0, 100)
    Actor2 = Actor.generatePersonMatchRace()
    Actor2.matchLastName(Actor)
    Actor2.dress()
    addNpcRelationship(Siblings, Actor, Actor2)
    If dice < 30
        Actor3 = Actor.generatePersonMatchRace()
        Actor3.matchLastName(Actor)
        Actor3.dress()
        addNpcRelationship(Siblings, Actor, Actor3)    
    Endif
    
    Actor.dress()
    Actor.show(4)
    Actor(Happy):: "Bébé, permettez-moi de vous présenter <Actor2.mon_or_ma> <Actor2.frere_or_soeur>, <Actor2.name>."
    If dice < 30
        Actor(Happy):: "Et aussi <Actor3.mon_or_ma> <Actor3.frere_or_soeur>, <Actor3.name>."
        Actor3.show(2)
        Actor3(Happy):: "Salut. Ravi de vous rencontrer enfin."
    Endif
    Actor2.show(3)
    Actor2(Happy):: "Ravi de vous rencontrer enfin, <Player.name>. <Actor.name> n'a pas arrêter de parler de vous."
    Player(Happy):: "Ravi de vous rencontrer aussi."
    0:: "Laissez-moi vous ajouter sur Facebook"
    1:: "Ne rien dire"
    
    If 0
        "C'était une offre suffisamment amicale pour être acceptée tout de suite. C'est toujours agréable d'être du bon côté de la famille de <Actor.mon_or_ma> <Actor.chum_or_blonde>."
        exchangeContact(Actor2)
        If dice < 30
            exchangeContact(Actor3)
        Endif
    Endif
    SceneEnd()
    timeout(1000, dating_sibling)