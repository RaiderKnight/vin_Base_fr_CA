WHAT: all
WHERE: all, -work
WHEN: 8 - 20
WHO: Actor = getCompanion(); If !Actor.isRelative() && !Actor.isAsexual() && !Actor.isDating() && !Actor.isExRelative() && !Actor.hasRelationship(Siblings) && Random(20, 100) < Actor:rapportwithplayer
OTHER: none

    SceneStart()
    dice = Random(0, 100)
    Actor2 = Actor.generatePersonMatchRace()
    Actor2.matchLastName(Actor)
    Actor2.dress()
    addNpcRelationship(Siblings, Actor, Actor2)
    If dice < 30
        Actor3 = Actor.generatePersonMatchRace()
        Actor3.matchLastName(Actor)
        Actor3.dress()
        addNpcRelationship(Siblings, Actor, Actor3)    
    Endif
    
    Actor(Happy):: "<Player.name>, permettez-moi de vous pr√©senter <Actor2.mon_or_ma> <Actor2.frere_or_soeur>, <Actor2.name>. <Actor2.name>, voici mon ami <Player.name>."
    If dice < 30
        Actor(Happy):: "Et aussi <Actor3.mon_or_ma> <Actor3.frere_or_soeur>, <Actor3.name>."
        Actor3.show(2)
        Actor3(Happy):: "Salut. Ravi de te rencontrer."
    Endif
    Actor2.show(3)
    Actor2(Happy):: "Ravi de te rencontrer, <Player.name>."
    Player(Happy):: "Ravi de te rencontrer aussi."
    SceneEnd()
    timeout(350, friend_sibling)