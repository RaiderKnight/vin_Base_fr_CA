WHAT: all, -sleep, -nap
WHERE: home
WHEN: 8 - 20
WHO: Actor = getSpecific(Neighbour); If !Actor.isAsexual() && !Actor.isDating() && !Actor.hasRelationship(Spouses, Dating) && Random(20, 100) < Actor:rapportwithplayer && Random(0, 100) < Actor:age
OTHER: isAtHome() && !isWithCompanion()

    SceneStart()
    "Je passais devant l'appartement de mon voisin <Actor.name>. <Actor.Il_or_Elle> était avec quelqu'un."
    Actor2 = generatePersonTemporary()
    While !Actor.isInterestedIn(Actor2)
        Actor2 = generatePersonTemporary()
    Endwhile
    Actor2.makePermanent()
    Actor2.matchLastName(Actor)
    Actor2:age => Actor:age + Random(-10, 10)
    Actor2:age += 1
    Actor2.randomizeHairs()
    Actor2.randomizeFace()
    Actor2.dress()
    addNpcRelationship(Spouses, Actor, Actor2)
    
    Actor.dress()
    Actor.show(4)
    Actor(Happy):: "<Player.name>, venez, laissez-moi vous présenter <Actor2.mon_or_ma> <Actor2.mari_or_femme>, <Actor2.name>. <Actor2.name>, voici mon voisin <Player.name>."
    Actor2.show(3)
    Actor2(Happy):: "Ravi de vous rencontrer, <Player.name>."
    Player(Happy):: "Ravi de vous rencontrer aussi."
    SceneEnd()
    timeout(350, neighbour_spouse, neighbour_dating)