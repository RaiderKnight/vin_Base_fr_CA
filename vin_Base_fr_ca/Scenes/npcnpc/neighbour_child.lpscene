WHAT: all, -sleep, -nap
WHERE: home
WHEN: 8 - 20
WHO: Actor = getSpecific(Neighbour); If Actor:age > 45 && !Actor.hasRelationship(ParentChild) && Random(20, 100) < Actor:rapportwithplayer
OTHER: isAtHome() && !isWithCompanion()

    SceneStart()
    "Je passais devant l'appartement de mon voisin <Actor.name>. Il semblait y avoir plus de monde que d'habitude. Une sorte de réunion de famille peut-être."
    dice = Random(0, 100)
    Actor2 = Actor.generatePersonMatchRace()
    Actor2.matchLastName(Actor)
    Actor2:age => Actor:age - Random(20, 40)
    Actor2:age += 1
    Actor2.randomizeHairs()
    Actor2.randomizeFace()
    Actor2.dress()
    addNpcRelationship(ParentChild, Actor, Actor2)
    If dice < 30
        Actor3 = Actor.generatePersonMatchRace()
        Actor3.matchLastName(Actor)
        Actor3:age => Actor:age - Random(20, 40)
        Actor3:age += 1
        Actor3.randomizeHairs()
        Actor3.randomizeFace(
        Actor3.dress()
        addNpcRelationship(ParentChild, Actor, Actor3)    
    Endif
    
    Actor.dress()
    Actor.show(4)
    Actor(Happy):: "<Player.name>, venez, laissez-moi vous présenter <Actor2.mon_or_ma> <Actor2.fils_or_fille>, <Actor2.name>. <Actor2.name>, voici mon voisin <Player.name>."
    If dice < 30
        Actor(Happy):: "And also <Actor3.mon_or_ma> <Actor3.fils_or_fille>, <Actor3.name>."
        Actor3.show(2)
        Actor3(Happy):: "Salut. Ravi de vous rencontrer. Désolé si ont fait trop de bruit."
    Endif
    Actor2.show(3)
    Actor2(Happy):: "Ravi de vous rencontrer, <Player.name>!"
    Player(Happy):: "Ravi de vous rencontrer!"
    SceneEnd()
    timeout(350, neighbour_sibling, neighbour_child)