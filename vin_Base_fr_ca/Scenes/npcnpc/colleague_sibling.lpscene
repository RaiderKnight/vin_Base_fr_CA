WHAT: all
WHERE: work
WHEN: 17 - 21
WHO: Actor = getSpecific(Colleague); If !Actor.hasRelationship(Siblings) && Random(20, 100) < Actor:rapportwithplayer
OTHER: none

    SceneStart()
    Actor.dress()
    Actor.show(4)
    "C'était une longue journée de travail. Il est temps de rentrer à la maison. <Actor.name> part aussi en même temps"
    "<Actor.Il_or_Elle> m'a dit plutôt dans la journée qu'<Actor.il_or_elle> emmenait des membres de sa famille souper ce soir et ils devraient déjà attendre devant l'immeuble."
    setBackground(street)
    dice = Random(0, 100)
    Actor2 = Actor.generatePersonMatchRace()
    Actor2.matchLastName(Actor)
    Actor2.dress()
    addNpcRelationship(Siblings, Actor, Actor2)
    If dice < 30
        Actor3 = Actor.generatePersonMatchRace()
        Actor3.matchLastName(Actor)
        Actor3.dress()
        addNpcRelationship(Siblings, Actor, Actor3)    
    Endif
    "Effectivement, la famille l'attend avec un sourire!"
    Actor(Happy):: "<Player.name>, permettez-moi de vous présenter <Actor2.mon_or_ma> <Actor2.frere_or_soeur>, <Actor2.name>."
    If dice < 30
        Actor(Happy):: "Et aussi <Actor3.mon_or_ma> <Actor3.frere_or_soeur>, <Actor3.name>."
        Actor3.show(2)
        Actor3(Happy):: "Salut. Ravi de vous rencontrer."
    Endif
    Actor2.show(3)
    Actor2(Happy):: "Ravi de vous rencontrer, <Player.name>."
    Player(Happy):: "Ravi de vous rencontrer aussi."

    SceneEnd()
    timeout(250, colleague_sibling)