WHAT: all, -sleep, -nap, -sleep_hotel, -nap_hotel
WHERE: all
WHEN: 0 - 24
WHO: Dating = getRelative(); If Dating:rapportwithplayer > 0 && Dating:intelligence > 70
OTHER: intelligence < Random(0, 60)

    SceneStart()
    secondScreenIfHidden(Dating)
    Dating.dress()
    Dating.show(2)
    "<Dating.name> est beaucoup plus intelligen<Dating.t_or_te> et plus instrui<Dating.t_or_te> que moi et est plutôt bien informée sur de nombreux sujets. Je me sens parfois un peu stupide."
    0:: "Demander de l'aide à  <Dating.name>"
    1:: "Pourquoi m'inquiéter"

    If 0
        If Random(0, 50) < Dating:rapportwithplayer
            "<Dating.name> a accepté de m'aider à devenir plus intelligen<Player.t_or_te>. <Dating.Il_or_Elle> m'a recommandé de nombreux bons livres et cours en ligne."
            intelligence += Random(0, 1)
            Dating:rapportwithplayer += Random(0, 2)
        Else
            "Bien que <Dating.name> ait promis de m'aider, <Dating.il_or_elle> a fini par être trop occupée pour vraiment passer du temps en tant que mentor intellectuel."
        Endif
    Else
        "Cela n'a pas d'importance. Je suis fier de qui je suis et ma famille devrait l'être aussi."
        Dating:rapportwithplayer -= Random(0, 1)
    Endif

    timeout(200, intelligent_family)
    SceneEnd()