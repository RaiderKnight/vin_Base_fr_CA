WHAT: all, -sleep, -nap, -sleep_hotel, -nap_hotel
WHERE: all
WHEN: 8 - 17
WHO: Actor = getRelative(); If !Actor.livesWithPlayer() 
OTHER: Random(0, 100) < 1

    SceneStart()
    secondScreen(Actor)
    Actor.dress()
    Actor.show(2)
    "<Actor.name> déménage bientôt. Dois-je lui offrir mon aide pour son déménagement?"
    0:: "Oui"
    1:: "Non"
    
    If 0
        "Pourquoi pas? Ça fait du bien d'aider la famille. En plus, ce sera une bonne façon de faire de l'exercice."
        secondScreen()
        energy -= Random(0, 100)
        fitness += Random(0, 0.25)
        Actor:rapportwithplayer += Random(0, 5)
        Loc = Actor.getBuilding(home)
        moveTo(Loc)
        Actor.show()
        Actor(Happy):: "Merci beaucoup de nous avoir aidés aujourd'hui. Nous n'avons aucune idée de comment nous aurions réussi sans vous. Ça aurait pris plus de temps c'est sûr!"
        Player(Happy):: "Ah ce n'est rien, ça m'a fait plaisir de vous aider..."
        karma += 2.5
    Else
        "Peut-être pas. Je suis sûr qu'ils vont embaucher une entreprise de déménagement pour le faire."
        Actor:rapportwithplayer -= Random(0, 3)
    Endif
    
    SceneEnd()
    timeout(2000, help_family_move)