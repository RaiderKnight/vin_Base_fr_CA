WHAT: all, -sleep, -nap, -sleep_hotel, -nap_hotel
WHERE: all
WHEN: 17 - 20
WHO: Actor = getRelative(Sibling, Cousin, StepSibling); Actor2 = getPerson(true); If !Actor.hasRelationship(Dating, Spouses) && !Actor2.hasRelationship(Dating, Spouses) && !Actor2.isDating() && Actor.isInterestedIn(Actor2) && Actor2.isInterestedIn(Actor) && Actor:rapportwithplayer > 20 && Actor2:rapportwithplayer > 20
OTHER: none

    SceneStart()
    Actor.dress()
    Actor.show(2)
    Actor2.dress()
    Actor2.show(3)
    
    "<Actor.name> est célibataire. Je pense que mon ami <Actor2.name> serait un bon match pour <Actor.lui_or_elle>."
    0:: "Organiser un blind date"
    1:: "Pas de mes affaires"
    
    If 0
        If Random(0, 100) < interpersonal
            "J'ai réussi à les convaincre d'aller à un blind date ensemble, ce qui s'est apparemment assez bien passé. Qui sait? Cela pourrait être le début de quelque chose de spécial."
            Actor:rapportwithplayer += Random(0, 5)
            Actor2:rapportwithplayer += Random(0, 5)
            addNpcRelationship(Dating, Actor, Actor2)
            karma += 2.5
        Else    
            "Malgré tous mes efforts, je n'ai pas pu les convaincre d'accepter un blind date."
            mood -= 5
        Endif
    Else
        "Je n'aime pas trop les blind dates et m'impliquer dans la vie personnelle des autres."
    Endif
    
    SceneEnd()
    timeout(200, set_up_blind_date_family)