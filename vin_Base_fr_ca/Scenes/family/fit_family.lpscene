WHAT: all, -sleep, -nap, -sleep_hotel, -nap_hotel
WHERE: all
WHEN: 0 - 24
WHO: Dating = getRelative(); If Dating:rapportwithplayer > 0 && Dating:fitness > 70
OTHER: fitness < Random(0, 60)

    SceneStart()
    secondScreenIfHidden(Dating)
    Dating.dress()
    Dating.show(2)
    "<Dating.name> est beaucoup plus sporti<Dating.f_or_ve> que moi et mène un style de vie plutôt sain. Je me sens parfois mal en point à comparer."
    0:: "Demander de l'aide à <Dating.name>"
    1:: "Ne rien faire"

    If 0
        If Random(0, 50) < Dating:rapportwithplayer
            "<Dating.name> a accepté de m'aider à devenir en meilleure santé. <Dating.Il_or_Elle> m'a emmené au gymnase avec <Dating.lui_or_elle> et a conçu des plans d'entraînement et un régime pour moi."
            fitness += Random(0, 1)
            Dating:rapportwithplayer += Random(0, 2)
        Else
            "Bien que <Dating.name> ait promis de m'aider, <Dating.il_or_elle> a fini par être trop occupée pour vraiment passer du temps en tant qu'entraîneur personnel et nutritionniste."
        Endif
    Else
        "Cela n'a pas d'importance. Je suis fier de qui je suis et ma famille devrait l'être aussi."
        Dating:rapportwithplayer -= Random(0, 1)
    Endif

    timeout(200, fit_family)
    SceneEnd()