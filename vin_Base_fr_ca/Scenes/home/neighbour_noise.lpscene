WHAT: sleep
WHERE: home
WHEN: 22 - 4
WHO: Actor = getSpecific(Neighbour); If Random(50, 100) < Actor:music 
OTHER: isAtHome()

    SceneStart()

    "<Actor.name>, mon voisin joue à nouveau de la musique fort ce soir. Je ne peux pas dormir ..."
    0:: "Ignorer"
    1:: "Se plaindre"
    2:: "Complimenter"

    If 0
        "Ne capotons pas. Je vais mettre des bouchons et essayer de m'endormir."
        masochist += Random(0, 0.5)
        energy -= Random(0, 20)
    Elseif 1
        "C'est inacceptable. Est-ce que <Actor.name> réalise à quel point il est tard?"
        Actor.dress()
        Actor.show(2)
        Player(Angry):: "Salut, pourrait-tu s'il te plaît baisser la musique? J'essaye de dormir ici."
        Actor(Sad):: "Oh désolé, je vais baisser le volume tout de suite."
        masochist -= Random(0, 0.5)
        Actor:rapportwithplayer -= Random(0, 5)
        If Actor.isInterestedIn(Player)
            Actor:attractiontoplayer -= Random(0, 5)
        Endif
    Else
        energy -= Random(0, 20)
        music += Random(0, 0.5)
        "En fait, j'apprécie assez sa musique. Qui a besoin de dormir de toute façon?"
        Actor.dress()
        Actor.show(2)
        Player(Happy):: "Tu es vraiment <Actor.bon_or_bonne> en musique d'ailleurs!"
        Actor(Happy):: "Oh, merci!"
        Actor:rapportwithplayer += Random(0, 5)
        If Actor.isInterestedIn(Player)
            Actor:attractiontoplayer += Random(0, 5)
        Endif
    Endif
    
    timeout(48, neighbour_noise)
    SceneEnd()
