WHAT: all, -go_to_the_bathroom
WHERE: bar, pub
WHEN: 0-24
WHO: none
OTHER: intoxication < 90 && Random(0, 500) < intoxication

    SceneStart()
    Actor = generatePerson()
    Actor.dress()
    Actor.show(2)
    
    "<Actor.name> s'approche de moi et me défie dans un duel d'alcool."
    0:: "Volontier!"
    1:: "Non merci!"
    
    If 0    
        Drunk = false
        While !Drunk
            "<Actor.name> a caller son drink."
            "Je vide mon verre aussi"
            Actor:intoxication += Random(0, 15)
            Player:intoxication += Random(0, 15)
            
            If Actor:intoxication >= 100
                "<Actor.name> semblait pas avoir le foie prêt pour son défie. J'ai gagné le duel!"
                money += Random(50, 200)
                Drunk = true
            Elseif intoxication >= 100
                "Ok that's it, ça rentre plus du tout, je ne peux pas boire un autre verre. J'ai perdu le duel!"
                money -= Random(50, 200)
                Drunk = true
            Endif
        Endwhile
    Else
        "J'ai vraiment d'autres choses à affaire avant de commencer à faire des duels d'alcool avec du monde."
    Endif
    
    SceneEnd()
    timeout(200, binge_drinking)