WHAT: all, -sleep, -sleep_hotel
WHERE: all, -work
WHEN: 9-21
WHO: Friend = getPerson(true); If Friend:rapportwithplayer > Random(0, 10) || [Friend.IsDominantSex(Player) && Friend:attractiontoplayer > Random(0, 10)]
OTHER: !IsWithCompanion() && !isWithCompanionCreature() && Random(0, 100) < interpersonal

sceneStart()

Friend.dress()

"Mon téléphone sonne ... C'est <Friend.name> qui m'appelle."
SecondScreen(Friend)
Friend.show(2)
Dating = Friend.IsDating()
If Dating
    Friend:: "Bébé, est-ce que ça te tente de passer du temps ensemble aujourd'hui!"
    Date = "Certainement!"
Else
    Friend:: "Salut <Player.name>, c'est <Friend.name>. Écoute, veux-tu sortir aujourd'hui?"
    Date = "Certainement!"
Endif
"<Date> with <Friend.name>?"
0:: "Oui"
1:: "Non"

If 0
    Player:: "Bien sûr, je m'en viens tout de suite!"
    If Dating
        Friend:: "A bientôt, chérie!"
    Else
        Friend:: "A bientôt!"
    Endif
    passTime(0.25, 1)
    SecondScreen()
    Friend.StartDate()
    timeout(12, call_invite)
Else
    If Dating
        Player:: "Pas aujourd'hui, chérie. Appelle-moi plus tard ..."
        Friend:: "D'accord, bébé. Je t'appellerai plus tard alors."
        Friend:attractiontoplayer -= Random(0, 1)
    Else
        Player:: "Désolé, je suis occupé aujourd'hui. Peut-être la plus tard ..."
        Friend:: "Oh? C'est dommage. Je t'appellerai plus tard alors."
    Endif
    
    timeout(6, call_invite)
Endif

sceneEnd()