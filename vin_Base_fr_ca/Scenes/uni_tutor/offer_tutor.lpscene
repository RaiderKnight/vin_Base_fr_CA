WHAT: none
WHERE: none
WHEN: 0 - 24
WHO: none
OTHER: none

    SceneStart()
    Tutor = Actor.getActorVar(tag_Tutor)
    Tutee = Actor.getActorVar(tag_Tutee)
    If Tutor + Tutee > 0
        "Un accord de tutorat est déjà en place avec cette personne"
    Else
        "À quel type de tutorat avec <Actor.name> ai-je en tête?"
        0:: "<Actor.name> en tant que tuteur"
        1:: "Moi en tant que tuteur"

        If 0
            Actor.setActorVar(tag_Tutor, 1)
        Else
            Actor.setActorVar(tag_Tutee, 1)
        Endif
        "<Actor.name> a accepté mon offre."
    Endif
    SceneEnd()