WHAT: all
WHERE: all, -home, -work
WHEN: 0-24
WHO: Actor = getCompanionCreature(); If Actor.isCreatureType(Dog) && Random(0, 200) < Actor:interpersonal + Actor:fitness
OTHER: none

    SceneStart()
    Actor.show(2)
    "<Actor.name> remue sa queue pour montrer qu'<Actor.il_or_elle> est conten<Actor.t_or_te>. <Actor.Il_or_Elle> semble être d'humeur à vouloir jouer à la balle."
    0:: "Jouer à la balle avec <Actor.name>"
    1:: "Pas mainteant"
    
    If 0
        Player(Happy):: "Bon toutou! Là, va chercher, va chercher ..."
        Actor:rapportwithplayer += Random(0, 1)
        Actor:attractiontoplayer += Random(0, 1)
        Actor:interpersonal += Random(0, 1)
        Player:mood += Random(0, 5)
    Else
        Player(Angry):: "Pas maintenant! Je devrais penser à commencer à rentrer à la maison!"
        Actor:rapportwithplayer -= Random(0, 1)
        Actor:attractiontoplayer -= Random(0, 1)
        Actor:interpersonal -= Random(0, 1)
    Endif

    SceneEnd()
    timeout(24, pet_plays_fetch)