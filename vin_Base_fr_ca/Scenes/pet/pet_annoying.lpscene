WHAT: sleep, nap
WHERE: home
WHEN: 0-24
WHO: Actor = getCreature(); If Actor.isCreatureType(Dog) && Random(0, 40) > Actor:sneak 
OTHER: isAtHome()

    SceneStart()
    Actor.show(2)
    Player.closeEyes(true)
    Actor:: "Wouff! Wouff! Wouff!"
    Player.closeEyes(false)
    "Allez, tais-toi <Actor.name>! J'essaye de dormir ici."
    "Eh bien, c'est ce qui arrive lorsque tu as un chien, je suppose."
    0:: "Couche toi <Actor.name>"
    1:: "Le laisser japper"
    
    If 0
        Player(Angry):: "Couche toi <Actor.name>! <Player.Maman_or_Papa> veut dormir!"
        Actor:rapportwithplayer -= Random(0, 2)
        Actor:attractiontoplayer -= Random(0, 2)
        Actor:sneak += Random(0, 2)
        energy -= Random(0, 10)
    Else
        "Les chiens aboient. C'est ce qu'ils font. Essayons juste de se rendormir."
        energy -= Random(0, 20)
    Endif

    SceneEnd()
    timeout(72, pet_annoying)