WHAT: all
WHERE: home
WHEN: 0-24
WHO: Actor = getCreature(); If Actor.isCreatureType(Dog) && Random(0, 200) < Actor:interpersonal 
OTHER: isAtHome()

    SceneStart()
    Actor.show(2)
    "<Actor.name> remue sa queue de joie. <Actor.Il_or_Elle> semble être d'humeur à jouer."
    0:: "Jouez avec <Actor.name>"
    1:: "Pas maintenant"
    
    If 0
        Player(Happy):: "Bon chien! Viens ici ..."
        Actor:rapportwithplayer += Random(0, 2)
        Actor:attractiontoplayer += Random(0, 2)
        Actor:interpersonal += Random(0, 2)
        Player:mood += Random(0, 20)
    Else
        Player(Angry):: "Pas maintenant! Va jouer avec ta grosse corde!"
        Actor:rapportwithplayer -= Random(0, 2)
        Actor:attractiontoplayer -= Random(0, 2)
        Actor:interpersonal -= Random(0, 2)
    Endif

    SceneEnd()
    timeout(72, pet_comforting)