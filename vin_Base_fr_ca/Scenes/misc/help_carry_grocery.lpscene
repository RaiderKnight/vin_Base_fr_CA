WHAT: all, -go_to_the_bathroom
WHERE: alcohol, beverages, convenience, greengrocer, marketplace, variety_store, supermarket, department_store
WHEN: 0 - 24
WHO: none
OTHER: Random(0, 100) < 20

    SceneStart()
    Actor = generatePersonTemporary()
    Actor.dress()
    Actor.show(2)
    "Je vois quelqu'un qui a vraiment de la difficulté a transporter ces sacs d'épicerie. Dois-je lui proposer de l'aider?"
    0:: "Oui"
    1:: "Non"
    
    If 0
        Actor.makePermanent()
        Player(Happy):: "S'cusez, tu veux de l'aide pour porter ces sacs? On dirait que tu as de la difficulté."
        karma += 2.5
        Actor(Happy):: "Oui, s'il te plaît. Oh merci mon Dieu. J'ai acheté beaucoup trop aujourd'hui."
        "Vous avez aidé l'inconnu à ramener ces courses à sa voiture."
        Actor(Happy):: "Merci encore pour ton aide. Je ne sais pas comment j'aurais pu m'en sortir sans toi."
        0:: "Échanger nos numéros"
        1:: "Dites au revoir"
        
        If 0
            Player(Happy):: "Pas de problème. Je suis content d'avoir pu t'aider. Au fait, cela te dérangerait-il de me donner ton numéro? Tu as l'air d'être un <Actor.gars_or_fille> cool> - ont pourraient sortir quelque part..."
            "Nous avons échangé nos numéros et nous nous sommes séparés."
            exchangeContact(Actor)
        Else
            Player(Happy):: "Pas de problème. Heureux d'avoir pu vous aider."
        Endif
    Else
        "Je n'ai pas le temps pour ça  ..."
    Endif
    SceneEnd()
    timeout(24, help_carry_grocery)