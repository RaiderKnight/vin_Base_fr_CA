WHAT: none
WHERE: none
WHEN: 0 - 24
WHO: none
OTHER: none

    SceneStart()
    PreciseModify()
    choice = 1
    While choice > 0
        "Qu'est-ce que je veux acheter?"
        0:: "Rien"
        1:: "Ordinateur"
        2:: "Télé"
        3:: "Machine à laver"
        4:: "Sècheuse"
        5:: "Évier"
        6:: "Toilette"
        7:: "Cuisinières"
        8:: "Micro-ondes"
        9:: "Réfrigérateur"
        10:: "Air conditionné"
        11:: "Système audio"
        12:: "Console de jeux"
        13:: "Lecteur DVD"
        
        
        If 0
            "J'ai assez d'appareils électroménagers pour le moment."
        Else
            If 1 || 7 || 10
                Price = 250*CostofLiving*Random(0.8, 1.2)                
            Elseif 2 || 6 || 9
                Price = 150*CostofLiving*Random(0.8, 1.2)
            Elseif 3 || 4 || 5 || 8 || 11 || 12 || 13
                Price = 75*CostofLiving*Random(0.8, 1.2)            
            Endif
            
            Price1 = Price*Random(1.5, 2.5)
            Price2 = Price*Random(4, 10)
            
            PriceConvertered = Price.convertToLocalCurrency(false)
            Price1Convertered = Price1.convertToLocalCurrency(false)
            Price2Convertered = Price2.convertToLocalCurrency(false)
            
            "Il y a tellement d'options. Lequel devrais-je opter?"
            0:: "Produit économique pour <PriceConvertered>"
            1:: "Produit milieu de gamme pour <Price1Convertered>"
            2:: "Produit à la fine pointe de la technologie pour <Price2Convertered>"
            3:: "Aucun"
            
            If 3
                "En y réfléchissant, j'ai une meilleure idée d'utilisation pour mon argent."
            Else
                "Cela devrait correspondre à mes besoins et à mon budget."
                If 0
                    appliance_value += Price
                    money -= Price
                Elseif 1
                    appliance_value += Price1
                    money -= Price1
                Else
                    appliance_value += Price2
                    money -= Price2
                Endif           
            Endif
            choice = 14
        Endif       
    Endwhile
    
    SceneEnd()