WHAT: all, -sleep, -nap, -sleep_hotel, -nap_hotel
WHERE: all
WHEN: 17 - 20
WHO: none
OTHER: !isWithCompanion() && Random(50, 200) < dance

    SceneStart()
    "Il y a un concours de danse amateur dans quelques jours. Devrais-je m'inscrire?"
    0:: "Oui"
    1:: "Non"
    
    If 0
        "J'ai décidé de m'inscrire et j'ai fait pas mal de pratique avant la compétition."
        If Random(50, 200) < dance*Random(0, 1)
            "Mes efforts ont porté fruits. J'ai été couronné vainqueur de la compétition."
            money += Random(500, 2000)
            mood => 100
        Elseif Random(50, 200) < dance
            "Mes efforts ont porté fruits. J'ai réussi à décrocher la troisième place de la compétition."
            money += Random(250, 1000)
            mood += 20
        Else
            "Malgré tous mes efforts, il y avait de bien meilleurs danseurs que moi, et je n'ai reçu aucun prix."
            mood -= 10
        Endif
    Else
        "J'ai décidé de ne pas m'inscrire au compétition."
    Endif
    SceneEnd()
    timeout(500, dance_competition)