WHAT: none
WHERE: none
WHEN: 0-24
WHO: none
OTHER: none


    sceneStart()
    New_Person.makePermanent()
    InterestedInPC = New_Person.isInterestedIn(Player)
    DominantToPC = New_Person.isDominantSex(Player)
    If WHERE == work
        New_Person.addColleague()
    Elseif WHERE == home
        If isAtHome()
            New_Person.addNeighbour()
        Else
            New_Person.addDatingFriend()
        Endif
    Elseif WHERE == university:work || WHERE == university:school
        New_Person.setDifferentMajor()
    Endif

    If InterestedInPC && [DominantToPC || Random(0,1) < 0.2] && Random(0, 20) < (New_Person:attractiontoplayer + New_Person:interpersonal)
        "Je me suis retrouvé engagé dans une petite conversation avec quelqu'un que je viens de rencontrer - <New_Person.name>. Avant de partir, <New_Person.il_or_elle> m'a demandé mon numéro. Dois-je accepter la demande de <New_Person.name>?"
        0:: "Oui"
        1:: "Non"
        
        If 0
            exchangeContact(New_Person)
            "J'ai accepté avec joie. Nous avons échangé nos numéros et nous nous sommes séparés."
            If CompanionIntroduced
                CurrentCompanion(Happy):: "<New_Person.name> est une personne formidable. Tu as fait le bon choix en donnant ton numéros à <New_Person.lui_or_elle>."
                CurrentCompanion:rapportwithplayer += Random(0,1)
            Endif
        Else
            "J'ai trouvé une excuse pour ne pas lui donner mon numéro. Déçu, <New_Person.il_or_elle> est parti."
            If CompanionIntroduced
                CurrentCompanion(Angry):: "Tu n'aurais pas dû être aussi impoli avec mon <New_Person.ami_or_amie>! Tu es poche, la prochaine fois, je ne te présenterai plus à personne!"
                CurrentCompanion:rapportwithplayer -= Random(0,2)
            Endif

        endIf            
    Else
        Random
            "Je suis tombé sur quelqu'un d'intéressant, <New_Person.il_or_elle> se présente <New_Person.name>. Dois-je échanger mon numéro avec <New_Person.lui_or_elle>?"
            "Juste par hasard, j'ai rencontré <New_Person.name>, qui semble bien. Peut-être devrais-je lui demander son numéro de téléphone?"
        endRandom
        
            0:: interpersonal > 5:: "Oui"
            1:: "Non"
                
            If 0
                If [New_Person:attractiontoplayer < 20 && InterestedInPC] || [!InterestedInPC && New_Person:rapportwithplayer < 0)]
                    Random
                        New_Person(Happy):: "Désolé, mais je n'ai pas l'impression de te connaître assez bien pour partager ces informations personnelles pour le moment."
                        New_Person(Happy):: "Ça va être un non j'imagine. Un autre fois peut-être."
                        New_Person(Irritated):: "Désolé, mais normalement je n'échange pas de numéros avec quelqu'un que je viens de rencontrer."
                    endRandom      
                        If CompanionIntroduced && [CurrentCompanion:rapportwithplayer > 30 || CurrentCompanion:attractiontoplayer > 30]
                            CurrentCompanion(Irritated):: "Allez, <New_Person.name>. <Player.name> est une bonne personne. Tu n'as rien à craindre!"
                            New_Person(Happy):: "Très bien alors, si tu insiste. Désolé d'être trop prudent!"
                            exchangeContact(New_Person)
                            "Nous avons échangé nos numéros et nous nous sommes séparés."
                        Else
                            0:: "Je comprends"
                            1:: masochist < 30:: "Tu manque de quoi!"
                            
                            If 0
                                Random
                                    Player(Happy):: "Ce n'est pas grave. Je comprends. Faut se méfier des gens ces temps-ci."
                                    Player(Happy):: "Pas de soucis. Ce n'est pas un gros problème."
                                    Player(Wink):: "Est-ce que je t'ai fait peur? Haha! Ne t'inquiète pas. j'voulais pas te faire mal."
                                endRandom
                                
                                New_Person:rapportwithplayer += Random(1,5)
                                
                                If InterestedInPC
                                    New_Person:attractiontoplayer -= ( Random(1,10)*New_Person:masochist/100 )
                                endIf
                                
                            Else
                                Random
                                    Player(Angry):: "Très bien alors. C'est tu savais ce que tu manques!"
                                    Player(Angry):: "AH, check la petite chochotte!"
                                    Player(Sarcastic):: "Eh bien, on dirait que quelqu'un a une haute opinion de soi-même ..."
                                endRandom
                                
                                New_Person:rapportwithplayer -= Random(1,10)
                                
                                If InterestedInPC
                                    New_Person:attractiontoplayer += ( Random(1,20)*New_Person:masochist/100 )
                                    If New_Person:attractiontoplayer > 50
                                        Random
                                            New_Person(Scared):: "Eh bien ... Je ... Je suis désolé si je ne voulais pas être arrogant ou quelque chose comme ça. Je voulais juste discuter!"
                                            New_Person(Scared):: "Désolé. Tu m'as fais peur sur le coup ... Oui, ça serait cool de discuter, ont pourraient échanger nos numéros de téléphone car je suis un peu pressé maintenant."
                                        endRandom
                                        
                                        exchangeContact(New_Person)
                                    endif
                                    
                                endif
                                
                            endIf
                        Endif
                Else
                    exchangeContact(New_Person)
                    "Nous avons échangé nos numéros et nous nous sommes séparés."
                endIf
                
            Else
                "J'ai décidé de ne pas donner mon numéro à <New_Person.him_or_her>."
            endIf        
    endIf
    sceneEnd()