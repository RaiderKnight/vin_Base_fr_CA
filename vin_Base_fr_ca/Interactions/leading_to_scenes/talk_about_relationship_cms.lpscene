WHAT: none
WHERE: none
WHEN: 0 - 24 
WHO: none
OTHER: none

    SceneStart()
    "Utilisez cet outil pour définir le type de relation entre deux NPCs"
    "Continuer?"
    0:: "Oui"
    1:: "Non"
    
    If 0
        "Sélectionner un autre NPC"
        selectNPC()
        Actor2 = getSelectedNPC()
        If !Actor2.isValid()
            "Non valide"
        Elseif Actor2.isSameAs(Actor)
            "C'est le même NPC"
        Else
            Actor2.dress()
            Actor2.show()
            "Quelle relation il y a t-il entre <Actor.name> et <Actor2.name> ?"
            0:: "En couple"
            1:: "Conjoints"
            2:: "Frères et sœurs"
            3:: "Parent et enfant"
            4:: "Cousins"
            5:: "Patron et employé"
            6:: "Collègues"
            7:: "Supprimer toutes les relations existantes entre les deux"
            
            If 0
                addNpcRelationship(Dating, Actor, Actor2)
            Elseif 1
                addNpcRelationship(Spouses, Actor, Actor2)
            Elseif 2
                addNpcRelationship(Siblings, Actor, Actor2)
            Elseif 3
                addNpcRelationship(ParentChild, Actor, Actor2)
            Elseif 4
                addNpcRelationship(Cousins, Actor, Actor2)
            Elseif 5
                addNpcRelationship(BossEmployee, Actor, Actor2)
            Elseif 6
                addNpcRelationship(Colleagues, Actor, Actor2)
            Else
                removeNpcRelationship(Actor, Actor2)
            Endif
            "Fini"
        Endif
    Endif
    SceneEnd()